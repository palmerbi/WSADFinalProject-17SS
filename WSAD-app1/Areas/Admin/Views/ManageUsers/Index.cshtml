@model List<WSAD_app1.Areas.Admin.Models.ViewModels.ManageUser.ManageUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Users</h2>

@using (Html.BeginForm("Delete", "ManageUsers"))
{
    <table class="table">
        <tr>
            <th>&nbsp;</th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                EmailAddress
            </th>
            <th>
                Username
            </th>
            <th>
                isActive
            </th>
            <th>
                isAdmin
            </th>
            <th>
                Gender
            </th>
            <th>
                DateCreated
            </th>
            <th></th>
        </tr>

        @*@foreach (var item in Model) *@
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model[i];
            <tr>
                <td>
                    @Html.HiddenFor(x => Model[i].Id)
                    @Html.CheckBoxFor(x => Model[i].IsSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.ActionLink("User Details", "UserDetails", "ManageUsers", new { usersID = item.Id }, null)
                </td>
            </tr>
        }

    </table>
    <button type="submit" class="btn btn-danger">Delete Users</button>
}