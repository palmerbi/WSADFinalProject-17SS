@model List<WSAD_app1.Areas.Admin.Models.ViewModels.CourseManagemnt.CourseManagementViewModel>

@{
    ViewBag.Title = "Courses";
}
<h2>Courses</h2>
@using (Html.BeginForm("Delete", "CourseManagement"))
{
    <table class="table">
        <tr>
            <th>&nbsp;</th>
            <th>
                Course Name
            </th>
            <th>
                Teacher Name
            </th>
            <th>
                Meeting Days
            </th>
            <th>
                Meeting Time
            </th>
            <th>
                Occupancy
            </th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model[i];
            <tr>
                <td>
                    @Html.HiddenFor(x => Model[i].Id)
                    @Html.CheckBoxFor(x => Model[i].IsSelected)
                </td>
                <td>
                    @Html.ActionLink(item.Name, "CourseDetails", "CourseManagement", new { courseID = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingDates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupancy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-danger">Delete Courses</button>
}