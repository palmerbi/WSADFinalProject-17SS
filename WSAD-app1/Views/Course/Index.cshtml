@model List<WSAD_app1.Models.ViewModels.Courses.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>
@using (Html.BeginForm("AddToOrder", "ShoppingCart"))
{ 
<table class="table">
    <tr>
        <th>&nbsp;</th>
        <th>
            Course Name
        </th>
        <th>
            Teacher Name
        </th>
        <th>
            Meeting Days
        </th>
        <th>
            Meeting Time
        </th>
        <th>
           Occupancy
        </th>
    </tr>

@for(int i = 0; i<Model.Count();i++)
{
    var item = Model[i];
    <tr>
        <td>@Html.HiddenFor(ModelItem => Model[i].Id)
            @Html.CheckBoxFor(ModelItem => Model[i].IsSelected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeetingDates)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeetingTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Occupancy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
    </tr>
}

</table>
    <button type="submit" class="btn btn-primary">Submit To My Courses</button>
}